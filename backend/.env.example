# ==========================================
# SPINSCRIBE CORE SYSTEM CONFIGURATION
# ==========================================

# OpenAI Configuration (Required for CAMEL)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# CAMEL System Configuration
CAMEL_LOG_LEVEL=INFO
CAMEL_WORKSPACE_DIR=./workspace
CAMEL_MEMORY_LIMIT=100000
ENABLE_HUMAN_CHECKPOINTS=true

# Workflow Configuration
DEFAULT_WORKFLOW_TIMEOUT=600
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_RETRY_ATTEMPTS=3

# Knowledge Management
KNOWLEDGE_BASE_DIR=./knowledge
ENABLE_RAG=true
VECTOR_DIMENSION=1536

# Human Layer Integration
HUMANLAYER_API_KEY=your-humanlayer-key
ENABLE_HUMAN_APPROVAL=true

# Development
DEBUG=true
LOG_LEVEL=INFO
